    "babel-jest": "^24.7.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "fs-extra": "^7.0.1",
    "gulp": "^4.0.2",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "standard": "^12.0.1",
    "yarn": "^1.15.2"
  },
  "dependencies": {
    "apollo-server": "^2.5.0",
    "apollo-server-express": "^2.5.0",
    "babel-polyfill": "^6.26.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
